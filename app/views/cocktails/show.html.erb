<h1> <%= @cocktail.name %> </h1>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, width: 400, height: 300, crop: :fill %>
<% else %>
  <%= cl_image_tag("a1dz72omplaazj9f12bu", width: 400, height: 300, crop: :fill) %>
<% end %>
<hr>

<% @doses.each do |dose| %>
<p> <%= dose.description %> </p>
<p> <%= dose.ingredient.name %> </p>
<%= link_to "Remove dose", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
<hr>
<% end %>
<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to list", cocktails_path %>
